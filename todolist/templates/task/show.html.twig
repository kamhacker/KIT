{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="jumbotron text-center"> <h1>Task</h1> </div>

    <table class="table table-bordered table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ task.deadline ? task.deadline|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ task.createdAt ? task.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsImportant</th>
                <td>{{ task.isImportant ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsCompleted</th>
                <td>{{ task.isCompleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="table-bordered table-striped table-dark"><a class="btn btn-primary" href="{{ path('task_edit', {'id': task.id}) }}">edit</a></div>

    {{ include('task/_delete_form.html.twig') }}

    <a href="{{ path('task_index') }}">back to list</a>
{% endblock %}
